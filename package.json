{
  "name": "custom-site-blog",
  "version": "1.0.0",
  "description": "静的サイトジェネレーター開発日誌",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^10.12.18",
    "@types/prismjs": "^1.9.0",
    "@types/react": "^16.7.18",
    "custom-site": "^0.1.0",
    "npm-run-all": "^4.1.5",
    "prismjs": "^1.15.0",
    "react": "^16.7.0",
    "typescript": "^3.2.2"
  },
  "scripts": {
    "start": "npm run prebuild && run-p server build:*:watch",
    "prebuild": "run-p build:*",
    "server": "custom-site src -Do --base-path custom-site-blog --layout ./template/template.js --components ./components/components.js",
    "build": "custom-site src --out-dir docs --base-path custom-site-blog --layout ./template/template.js --components ./components/components.js",
    "build:template": "tsc ./template/template.tsx --jsx react --lib esnext --target esnext --module commonjs",
    "build:components": "tsc ./components/components.tsx --jsx react --lib esnext --target esnext --module commonjs",
    "build:template:watch": "npm run build:template -- --watch",
    "build:components:watch": "npm run build:components -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Himenon/custom-site-blog.git"
  },
  "author": "Himenon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Himenon/custom-site-blog/issues"
  },
  "homepage": "https://github.com/Himenon/custom-site-blog#readme"
}
